// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Alias {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  taxonomy      Taxonomy        @relation(fields: [taxonomyId], references: [id])
  taxonomyId    Int
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Taxonomy {
  id            Int             @id @default(autoincrement())
  active        Boolean         @default(true)
  name          String          @unique
  parent        Taxonomy?       @relation("NestedTaxonomy", fields: [parentId], references: [id])
  parentId      Int
  avatar        String?
  aliases       Alias[]
  tasks         Task[]
  children      Taxonomy[]      @relation("NestedTaxonomy")
  notes         Note[]
  type          TaxonomyType    @default(Project)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

enum TaxonomyType {
  Person
  Project
  Organization
}

model Note {
  id            Int             @id @default(autoincrement())
  tasks         Task[]
  taxonomy      Taxonomy?       @relation(fields: [taxonomyId], references: [id])
  taxonomyId    Int 
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Task {
  id	        Int	  		    @id @default(autoincrement())
  description   String
  complete      Boolean         @default(false)
  assignedTo    Taxonomy        @relation(fields: [assignedToId], references: [id])
  assignedToId  Int
  note          Note?           @relation(fields: [noteId], references: [id])
  noteId        Int
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}
